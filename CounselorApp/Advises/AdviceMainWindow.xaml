<Window x:Class="CounselorApp.Advises.AdviceMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounselorApp.Advises"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Advice Window" Height="218.667" Width="282.867">
    <Grid>
        <Label x:Name="LabelChoose" Content="Choose security advice:" HorizontalAlignment="Left" Margin="51,28,0,0" VerticalAlignment="Top" Width="175" Height="26" FontSize="15" />
        <ComboBox x:Name="ComboBoxAdvices" HorizontalAlignment="Left" Margin="57,59,0,0" VerticalAlignment="Top" Width="149" Height="20" FontSize="10">
            <ComboBoxItem IsSelected="True" Content="Choose Advice"/>
        </ComboBox>
        <Button x:Name="ShowAdviceButton" Content="Show Advice" HorizontalAlignment="Left" Margin="57,119,0,0" VerticalAlignment="Top" Width="149" Click="ClickShowAdvice"/>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="7,10,0,0" VerticalAlignment="Top" Width="44" Click="ClickOnBackButton"/>

    </Grid>
</Window>
